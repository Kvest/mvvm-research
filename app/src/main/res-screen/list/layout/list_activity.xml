<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <import type="android.text.TextUtils"/>
        <variable
            name="viewModel"
            type="com.kvest.mvvm_research.screen.list.ListViewModel" />
    </data>
    <android.support.design.widget.CoordinatorLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dip"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="8dip"
            app:srcCompat="@drawable/ic_edit_black"
            app:fabSize="normal" />
        <RelativeLayout
            android:id="@+id/edit_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aaaaaa"
            android:padding="8dip"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
            <!--add-->
            <EditText
                android:id="@+id/item_id"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="id"
                android:inputType="number"
                android:text="@={viewModel.addId}"/>
            <EditText
                android:id="@+id/item_name"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_id"
                android:layout_alignParentTop="true"
                android:hint="name"
                android:text="@={viewModel.addName}"/>
            <EditText
                android:id="@+id/item_position"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_name"
                android:layout_alignParentTop="true"
                android:hint="position"
                android:inputType="number"
                android:text="@={viewModel.addPosition}"/>
            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_position"
                android:layout_alignParentTop="true"
                android:text="Add"
                android:enabled="@{!TextUtils.isEmpty(viewModel.addId) &amp;&amp; !TextUtils.isEmpty(viewModel.addName)}"
                android:onClick="@{v -> viewModel.add()}"/>


            <!--delete-->
            <EditText
                android:id="@+id/item_id_del"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/add"
                android:hint="id"
                android:inputType="number"
                android:text="@={viewModel.deleteId}"/>
            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_id_del"
                android:layout_below="@+id/add"
                android:text="Delete"
                android:enabled="@{!TextUtils.isEmpty(viewModel.deleteId)}"
                android:onClick="@{v -> viewModel.delete()}"/>

            <!--change-->
            <EditText
                android:id="@+id/item_id_edit"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/delete"
                android:hint="id"
                android:inputType="number"
                android:text="@={viewModel.editInfo.id}"/>
            <EditText
                android:id="@+id/item_new_name"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_id_edit"
                android:layout_below="@+id/delete"
                android:hint="new name"
                android:text="@={viewModel.editInfo.newName}"/>
            <Button
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_new_name"
                android:layout_below="@+id/delete"
                android:text="Edit"
                android:enabled="@{viewModel.editInfo.isValid()}"
                android:onClick="@{v -> viewModel.edit()}"/>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
